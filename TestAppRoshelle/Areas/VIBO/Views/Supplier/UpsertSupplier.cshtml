@model TestAppRoshelle.Models.ViewModels.SupplierVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutVIBO.cshtml";
}

<div class="main-wrapper">
    <div class="content container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Suplier Management Section</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Supplier Type</label>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(m => m.Supplier.CategoryId, Model.CategoryList, "-Select Supplier Type-",
                                 new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Supplier Name</label>
                                <div class="col-md-10">
                                    <input type="text" asp-for="Supplier.Name" class="form-control">
                                    <span asp-validation-for="Supplier.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Address</label>
                                <div class="col-md-10">
                                    <input type="text" asp-for="Supplier.Address" class="form-control">
                                    <span asp-validation-for="Supplier.Address" class="text-danger"></span>
                                </div>
                            </div>
                
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Email</label>
                        <div class="col-md-10">
                            <input type="text" asp-for="Supplier.Email" class="form-control">
                            <span asp-validation-for="Supplier.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">City</label>
                        <div class="col-md-10">
                            <input type="text" asp-for="Supplier.City" class="form-control">
                            <span asp-validation-for="Supplier.Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">County</label>
                        <div class="col-md-10">
                            <input type="text" asp-for="Supplier.Country" class="form-control">
                            <span asp-validation-for="Supplier.Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Fax Numer</label>
                        <div class="col-md-10">
                            <input type="number" asp-for="Supplier.Fax" class="form-control">
                            <span asp-validation-for="Supplier.Fax" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Telephone Number</label>
                        <div class="col-md-10">
                            <input type="text" asp-for="Supplier.TelephoneNumber" class="form-control">
                            <span asp-validation-for="Supplier.TelephoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2"> Forwarder Name </label>
                        <div class="col-md-10">
                            <input type="text" asp-for="Supplier.ForwarderName" class="form-control">
                            <span asp-validation-for="Supplier.ForwarderName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Port Of Discharge</label>
                        <div class="col-md-10">
                            <input type="text" asp-for="Supplier.PortOfDischarge" class="form-control">
                            <span asp-validation-for="Supplier.PortOfDischarge" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Import Id</label>
                        <div class="col-md-10">
                            <input type="text" asp-for="Supplier.ImportId" class="form-control">
                            <span asp-validation-for="Supplier.ImportId" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mt-2">
                        @if (Model.Supplier.Id != 0)
                        {
                            <input type="hidden" asp-for="Supplier.Id"  value="Model.Supplier.Id" class="form-control">
                            <partial name="_EditAndBackToListButton" model="Model.Supplier.Id" /> }
                        else
                        {
                            <partial name="_CreateAndBackToListButton" />}

                    </div>
                    </form>
                </div>
                </div>

            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Supplier List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="categoryData" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Country</th>
                            <th>TelephoneNumber</th>
                            <th>Email</th>
                            <th>Fax</th>
                            <th>ForwarderName</th>
                            <th>PortOfDischarge</th>
                            <th>ImportId</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                            @foreach (var item in (IEnumerable<Supplier>)TempData["supplierList"])
                            {<tr>
                            <th>@item.Name</th>
                            <th>@item.Category.Name</th>
                            <th>@item.Address</th>
                            <th>@item.City</th>
                            <th>@item.Country</th>
                            <th>@item.Email</th>
                            <th>@item.TelephoneNumber</th>
                            <th>@item.Fax</th>
                            <th>@item.ForwarderName</th>
                            <th>@item.PortOfDischarge</th>
                            <th>@item.ImportId</th>
                            <th>
                                <a class="btn btn-success" asp-area="VIBO" asp-controller="Supplier" asp-action="UpsertSupplier" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-success" asp-area="VIBO" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </th>
</tr>
    }


                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/supplier.js"></script>
}
